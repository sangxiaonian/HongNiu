<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/color_new_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/card_balance"
        app:layout_constraintEnd_toStartOf="@id/ll_car"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_home_hw_56" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="货主"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_cargo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_cargo">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"

            android:src="@mipmap/icon_home_cz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="车主"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_cargo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@id/ll_car"
        app:layout_constraintTop_toTopOf="@id/ll_cargo">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_home_sj_56" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="司机"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/card_balance"
        style="@style/home_card"
        android:layout_height="115dp"

        app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top_bg">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/app_gap"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintVertical_chainStyle="packed">

            <Button
                android:id="@+id/bt_wallet"
                android:layout_width="95dp"
                android:layout_height="35sp"
                android:layout_marginRight="@dimen/app_gap"
                android:background="@drawable/bt_radius_2_333_999"
                android:text="@string/wallet_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_balance" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:src="@mipmap/bg_wdqb"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000.00"
                android:textColor="@color/color_title_dark"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="@id/tv_balance_des"
                app:layout_constraintTop_toBottomOf="@id/guideline2" />

            <TextView
                android:id="@+id/tv_balance_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额（元）"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_small_14"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.36" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_left"
        style="@style/home_card"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/card_policy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_balance">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_2"
                android:layout_width="96dp"
                android:layout_height="43dp"
                android:src="@mipmap/icon_chpp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="零担发货"
                android:textColor="@color/color_new_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/img_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_des_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:text="在线沟通快速发货"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_title_2"
                app:layout_constraintStart_toStartOf="@id/tv_title_2"
                app:layout_constraintTop_toBottomOf="@id/tv_title_2" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_policy"
        style="@style/home_card"
        android:layout_marginLeft="1dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_left"
        app:layout_constraintTop_toBottomOf="@id/card_balance">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="96dp"
                android:layout_height="43dp"
                android:src="@mipmap/icon_chpp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="车货匹配"
                android:textColor="@color/color_new_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/img_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_des_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:text="在线发布货源信息"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_title_1"
                app:layout_constraintStart_toStartOf="@id/tv_title_1"
                app:layout_constraintTop_toBottomOf="@id/tv_title_1" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_yongjin"
        style="@style/home_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toStartOf="@+id/card_etc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_policy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_model_gap"
                android:paddingTop="@dimen/app_model_gap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀好友赚佣金"
                    android:textColor="@color/color_title_dark"
                    android:textSize="@dimen/text_small_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻松赚钱"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_11sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:src="@mipmap/icon_yhyzyj_146" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_etc"
        style="@style/home_card"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_yongjin"
        app:layout_constraintTop_toTopOf="@id/card_yongjin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_model_gap"
                android:paddingTop="@dimen/app_model_gap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牛人保"
                    android:textColor="@color/color_title_dark"
                    android:textSize="@dimen/text_small_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线购买货运险"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_11sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:src="@mipmap/icon_etc_146" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>