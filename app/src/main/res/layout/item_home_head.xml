<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/view_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:gravity="center"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/app_gap">

            <com.fy.androidlibrary.widget.ColorImageView
                android:id="@+id/img_search"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="@dimen/app_model_gap"
                app:srcCompat="@drawable/icon_search_c8c8c8" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发车编号、车牌号、货物、订单号"
                android:textColor="@color/color_of_c8c8c8"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </com.fy.androidlibrary.widget.shadow.ShadowLayout>

    <ImageView
        android:id="@+id/ll_net_owner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/home_icon_huoyun"
        app:layout_constraintDimensionRatio="335:120"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_search" />


    <ImageView
        android:id="@+id/ll_contact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/home_icon_hetong"
        app:layout_constraintDimensionRatio="335:120"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_net_owner" />


    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/card_match"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintEnd_toStartOf="@id/card_goods_match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_contact">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城配"
                android:textColor="@color/color_title_dark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="在线发布货源信息"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />

            <ImageView
                android:layout_width="61dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_match" />
        </LinearLayout>


    </com.fy.androidlibrary.widget.shadow.ShadowLayout>

    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/card_goods_match"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintBottom_toBottomOf="@id/card_match"
        app:layout_constraintEnd_toStartOf="@id/card_star"
        app:layout_constraintStart_toEndOf="@id/card_match"
        app:layout_constraintTop_toTopOf="@id/card_match">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车货匹配"
                android:textColor="@color/color_title_dark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="快捷发布及时沟通"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />

            <ImageView
                android:layout_width="61dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_car_match" />
        </LinearLayout>


    </com.fy.androidlibrary.widget.shadow.ShadowLayout>

    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/card_star"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintBottom_toBottomOf="@id/card_match"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_goods_match"
        app:layout_constraintTop_toTopOf="@id/card_match">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="零担发货"
                android:textColor="@color/color_title_dark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="在线沟通快速发货"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />

            <ImageView
                android:layout_width="61dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_start_cargo" />

        </LinearLayout>


    </com.fy.androidlibrary.widget.shadow.ShadowLayout>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="热门推荐"
        android:textColor="@color/color_title_dark"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_match" />


    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/card_insurance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintEnd_toStartOf="@id/card_invite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_insurance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货运险牛人保"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线购买货运险"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </com.fy.androidlibrary.widget.shadow.ShadowLayout>

    <com.fy.androidlibrary.widget.shadow.ShadowLayout
        android:id="@+id/card_invite"
        style="@style/home_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        app:hl_cornerRadius="10dp"
        app:hl_shadowBackColor="@color/color_of_ffffff"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_insurance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_insurance"
        app:layout_constraintTop_toTopOf="@+id/card_insurance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_invite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请好友"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻轻松松赚佣金"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </com.fy.androidlibrary.widget.shadow.ShadowLayout>


</androidx.constraintlayout.widget.ConstraintLayout>