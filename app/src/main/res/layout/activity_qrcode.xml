<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QRCodeActivity">

    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_right"
        app:layout_constraintStart_toStartOf="parent">

        <com.sang.common.widget.ColorImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_icon_sm_50" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_item_gap"
            android:text="扫码查询"
            android:textSize="@dimen/text_small_16" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_left"
        app:layout_constraintTop_toTopOf="@id/ll_left">

        <com.sang.common.widget.ColorImageView
            android:id="@+id/img_right"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icon_search_ffffff" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_item_gap"
            android:text="手动输入"
            android:textSize="@dimen/text_small_16" />
    </LinearLayout>

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:id="@+id/tool"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"/>

</android.support.constraint.ConstraintLayout>