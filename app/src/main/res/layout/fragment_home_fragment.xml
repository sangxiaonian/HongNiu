<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.sang.common.recycleview.RecycleViewScroll
        android:layout_width="match_parent"
        android:id="@+id/rv"
        android:overScrollMode="never"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/color_new_light"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="@dimen/app_gap"
            android:background="@drawable/shape_2_19ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.sang.common.widget.ColorImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/img_search"
                android:layout_marginEnd="@dimen/app_model_gap"
                app:srcCompat="@drawable/ic_icon_sm_50" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单状态查询"
                android:textColor="@color/color_home_search"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </RelativeLayout>






</FrameLayout>