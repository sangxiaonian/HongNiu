<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/view_top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/icon_home_heard_bg"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="375:286"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_owner"
        style="@style/home_card"
        android:layout_height="115dp"
        android:layout_marginRight="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@mipmap/icon_home_hz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_model_gap"
                    android:text="货主"
                    android:textColor="@color/color_of_333333"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@mipmap/icon_home_cz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_model_gap"
                    android:text="车主"
                    android:textColor="@color/color_of_333333"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/ll_cargo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.64"
                app:layout_constraintStart_toEndOf="@id/ll_car"
                app:layout_constraintTop_toTopOf="@id/ll_cargo">

                <ImageView

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@mipmap/icon_home_sj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_model_gap"
                    android:text="司机"
                    android:textColor="@color/color_of_333333"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_info"
        style="@style/home_card"
        android:layout_height="200dp"
        android:layout_marginRight="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_owner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_net_owner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络货运"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="切换到您的网络货运平台"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/icon_home_net_tran" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_of_f4f4f4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/card_match"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="7dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="城配"
                            android:textColor="@color/color_title_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在线发布货源信息"
                            android:textColor="@color/color_content_light"
                            android:textSize="@dimen/text_min_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="52dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_match" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_of_f4f4f4" />

                <LinearLayout
                    android:id="@+id/card_goods_match"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="7dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车货匹配"
                            android:textColor="@color/color_title_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快捷发布及时沟通"
                            android:textColor="@color/color_content_light"
                            android:textSize="@dimen/text_min_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="52dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_car_match" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_of_f4f4f4" />

                <LinearLayout
                    android:id="@+id/card_star"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="7dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="零担发货"
                            android:textColor="@color/color_title_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在线沟通快速发货"
                            android:textColor="@color/color_content_light"
                            android:textSize="@dimen/text_min_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="52dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_start_cargo" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_of_f4f4f4" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:text="热门推荐"
        android:id="@+id/tv"
        android:textColor="@color/color_title_dark"
        app:layout_constraintTop_toBottomOf="@id/card_info"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_insurance"
        style="@style/home_card"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_invite"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_insurance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货运险牛人保"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线购买货运险"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_invite"
        style="@style/home_card"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintStart_toEndOf="@+id/card_insurance"
        app:layout_constraintTop_toTopOf="@+id/card_insurance"
        app:layout_constraintBottom_toBottomOf="@+id/card_insurance"
        app:layout_constraintEnd_toEndOf="parent"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_invite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请好友"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻轻松松赚佣金"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>