<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/color_new_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/view_flag"
        app:layout_constraintEnd_toStartOf="@id/ll_car"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_icon_home_hw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="货主"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_cargo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_cargo">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"

            app:srcCompat="@drawable/ic_icon_home_cz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="车主"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/ll_cargo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@id/ll_car"
        app:layout_constraintTop_toTopOf="@id/ll_cargo">

        <ImageView

            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_icon_home_sj" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_model_gap"
            android:text="司机"
            android:textColor="@color/white"
            android:textSize="@dimen/text_min_12sp" />
    </LinearLayout>


    <View
        android:id="@+id/view_flag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_star"
        style="@style/home_card"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/card_match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_flag">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_start_goods" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="发货"
                android:textColor="@color/color_title_dark"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="在线沟通快速发货"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_match"
        style="@style/home_card"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_star"
        app:layout_constraintTop_toTopOf="@id/card_star">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_match" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="城配"
                android:textColor="@color/color_title_dark"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="在线发布货源信息"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_goods_match"
        style="@style/home_card"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintEnd_toEndOf="@id/card_match"
        app:layout_constraintStart_toStartOf="@id/card_match"
        app:layout_constraintTop_toBottomOf="@id/card_match">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_car_goods_match" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="车货匹配"
                android:textColor="@color/color_title_dark"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="快速发布及时沟通"
                android:textColor="@color/color_content_light"
                android:textSize="@dimen/text_min_12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_insurance"
        style="@style/home_card"
        android:layout_height="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintEnd_toStartOf="@id/card_goods_match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_invite"
        app:layout_constraintTop_toBottomOf="@id/card_match">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            >

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_insurance" />

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货运险牛人保"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线购买货运险"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_invite"
        style="@style/home_card"
        android:layout_height="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintEnd_toStartOf="@id/card_goods_match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/card_goods_match"
        app:layout_constraintTop_toBottomOf="@id/card_insurance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            >

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_invite" />

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请好友"
                    android:textColor="@color/color_title_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻轻松松赚佣金"
                    android:textColor="@color/color_content_light"
                    android:textSize="@dimen/text_min_12sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>