<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_light</item>
    </style>

    <style name="tranTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/color_tran</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="draw_item">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>

    </style>


    <style name="bt_sum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bt_radius_2_333_999</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_toolbar_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/app_gap</item>
        <item name="android:layout_marginRight">@dimen/app_gap</item>
        <item name="android:layout_marginTop">@dimen/app_gap</item>
        <item name="android:layout_marginBottom">@dimen/app_gap</item>
    </style>
  <style name="bt_sum_red" parent="bt_sum">
        <item name="android:background">@drawable/bt_radius_2_e83518_b2e83515</item>
    </style>
  <style name="bt_sum_white" parent="bt_sum">
      <item name="android:textColor">@color/color_title_dark</item>
        <item name="android:background">@drawable/shape_2_stoke_333</item>
    </style>

    <style name="itemview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingLeft">@dimen/app_gap</item>
        <item name="android:paddingRight">@dimen/app_gap</item>
        <item name="android:background">@color/color_bg</item>
    </style>
      <style name="itemmusetview" parent="itemview">
        <item name="android:paddingLeft">5dp</item>
        <item name="srcLeftshow">show</item>
    </style>

    <style name="viewPoint">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/shape_circle_ffffff</item>
    </style>



    <!--RadioGroup-->
    <style name="RadioGroup">
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/app_gap</item>
        <item name="android:paddingRight">@dimen/app_gap</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/select_line_eee_ddd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_color_999_e83515</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="person_center_parent">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="person_center_img_left">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="person_center_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#040000</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>


    <style name="person_center_img_right">
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">13dp</item>


    </style>

    <style name="bt_red">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ovl_5_e50000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="bt_white" parent="bt_red">
        <item name="android:textColor">#040000</item>
        <item name="android:background">@drawable/ovl_5_eeeeee</item>
    </style>


    <style name="item_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="centerType">normal</item>
        <item name="colorCenterHide">#eeeeee</item>
        <item name="colorCenter">#040000</item>
        <item name="colorLeft">@color/color_of_666666</item>
        <item name="showline">true</item>
        <item name="sizecenter">15dp</item>
        <item name="sizeleft">15dp</item>
        <item name="editable">true</item>
        <item name="isSingleLine">false</item>
    </style>
    <style name="item_text" parent="item_edit">
        <item name="editable">false</item>
        <item name="srcRight">@drawable/icon_go_999999</item>
        <item name="srcshow">true</item>
    </style>
</resources>
