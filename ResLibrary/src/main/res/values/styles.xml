<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="draw_item">
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>

    </style>


    <style name="bt_sum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bt_radius_2_333_999</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_toolbar_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/app_gap</item>
    </style>

    <style name="itemview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">@dimen/app_gap</item>
        <item name="android:paddingRight">@dimen/app_gap</item>
        <item name="android:background">@color/color_bg</item>
    </style>
</resources>
