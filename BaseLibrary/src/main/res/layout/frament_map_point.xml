<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">


    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_gap"
        android:paddingRight="@dimen/app_gap"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:background="@drawable/ic_bubble"
        app:layout_constraintBottom_toTopOf="@id/img_mark"
        app:layout_constraintEnd_toEndOf="@id/img_mark"
        app:layout_constraintStart_toStartOf="@id/img_mark">

        <TextView
            android:id="@+id/tv_title"
            tool:text="上海站"
            android:textColor="@color/color_title_dark"
            android:textSize="@dimen/text_small_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:textSize="@dimen/text_min_12sp"
            android:textColorHint="@color/color_content_light"
            android:id="@+id/tv_des"
            tool:text="上海市静安区木林路303号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/img_mark"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>