<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/app_gap">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:textColor="@color/color_title_dark"
        android:text="选择收款方式"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        android:layout_width="14dp"
        android:src="@mipmap/icon_close_gary_28"
        android:layout_height="14dp" />


    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:textColor="@color/color_content_light"
        android:text="描述"
        android:textSize="@dimen/text_small_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/rv"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_describe"
        android:layout_height="0dp"/>

    



</androidx.constraintlayout.widget.ConstraintLayout>