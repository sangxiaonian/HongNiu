<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/app_gap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买保险"
            android:textColor="@color/color_title_dark"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/bt_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             >

            <ImageView
                android:layout_marginLeft="@dimen/app_gap"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_close_gary_28" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="请填写运送货物价值"
            android:layout_weight="1"
            android:textColor="@color/color_title_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_insurance"
            android:layout_width="wrap_content"
            android:textColor="@color/color_light"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_gap">

        <EditText
            android:digits="1234567890."
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_tran"
            android:padding="@dimen/app_item_gap"
            android:maxLength="9"
            android:textColor="@color/color_title_dark"
            android:textCursorDrawable="@drawable/et_cursor"
            android:textSize="17sp" />

        <TextView
            android:text="元"
            android:textColor="@color/color_title_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_line"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/app_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox"
            android:button="@null"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_check_bg"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:textColor="@color/color_title_dark"
            android:textSize="13sp"
            android:text="@string/save"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:enabled="false"
        android:id="@+id/bt_sum"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="提交"
        style="@style/bt_sum"/>

</LinearLayout>