<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".ui.OrderInsuranceResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/icon_cgts_260" />

        <TextView
            android:id="@+id/tv_insurance_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/order_insurance_creat_success"
            android:textColor="@color/color_title_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_item_gap"
            android:text="保单号：1544613215215"
            android:textColor="@color/color_content_light"
            android:textSize="13sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/bt_check"
            style="@style/bt_sum"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/order_insurance_check_insurance" />

        <Button
            android:id="@+id/bt_finish"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_2_stoke_333"
            android:gravity="center"
            android:text="@string/finish"
            android:textColor="@color/color_title_dark"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>