<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_dark"
    android:orientation="vertical"
    tools:context=".ui.FinanceActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_title_dark"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="3dp">

        <com.sang.common.widget.SwitchTextLayout
            android:id="@+id/switch_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:closeColor="@color/color_white"
            app:closeIcon="@drawable/icon_arrow_down_fff"
            app:openColor="@color/color_white"
            app:openIcon="@drawable/icon_arrow_down_fff"
            app:title="2018年8月"
            app:titleSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:background="@drawable/selector_bg_line_fff"
                android:button="@null"
                android:gravity="center"
                android:text="支出"
                android:textColor="@drawable/selector_color_6d6d6d_fff"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_bg_line_fff"
                android:button="@null"
                android:gravity="center"
                android:text="收入"
                android:textColor="@drawable/selector_color_6d6d6d_fff"
                android:textSize="15sp" />

        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>