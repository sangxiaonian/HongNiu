<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:paddingLeft="@dimen/app_gap"
    android:paddingRight="@dimen/app_gap"
    android:paddingTop="@dimen/app_model_gap"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_ylzf_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_pay_way"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pay_way"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_model_gap"
            android:textColor="@color/color_title_dark"
            android:textSize="@dimen/text_small_14"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pay_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_item_gap"
            android:textColor="@color/color_content_light"
            android:textSize="@dimen/text_min_12sp"
            android:layout_marginBottom="@dimen/app_model_gap"
            app:layout_constraintStart_toStartOf="@id/tv_pay_way"
            app:layout_constraintTop_toBottomOf="@id/tv_pay_way" />

       <!-- <ImageView
            android:layout_width="@dimen/img_go_size"
            android:layout_height="@dimen/img_go_size"
            android:layout_marginRight="@dimen/app_gap"
            android:src="@mipmap/icon_gary_arrowmore_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

-->

    <View
        android:layout_marginTop="@dimen/app_model_gap"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_line"
        android:layout_height="@dimen/line_height"/>
</android.support.constraint.ConstraintLayout>