<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp">
        <TextView
            android:id="@+id/tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_model_gap"
            android:layout_marginTop="25dp"
            android:text="共支出0笔，合计"
            android:textColor="@color/color_content_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/color_title_dark"
            android:textSize="36sp" />

    </LinearLayout>



    <com.hongniu.baselibrary.widget.XRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sang.common.recycleview.RecycleViewSupportEmpty
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:empty_img="@mipmap/icon_cw_240"
            app:empty_title="暂无收入" />
    </com.hongniu.baselibrary.widget.XRefreshLayout>

</LinearLayout>