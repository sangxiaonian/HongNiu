<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activiry.MatchOrderDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/app_gap"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bg"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:background="#E83515"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="90dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="等待司机送达" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_order_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_state">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp">

                        <android.support.constraint.Group
                            android:id="@+id/group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids="tv_start_info,ll_start_call,tv_end_info,ll_end_call" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_title_dark"
                            android:textSize="17sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="预约取货时间：10月23日21时40分" />

                        <TextView
                            android:id="@+id/tv_car_infor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:textColor="@color/color_content_light"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@id/tv_time"
                            app:layout_constraintStart_toStartOf="@id/tv_time"
                            app:layout_constraintTop_toBottomOf="@id/tv_time"
                            tools:text="配送车辆：三轮车（张玉珊 1379266382）" />

                        <TextView
                            android:id="@+id/tv_receive_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:textColor="@color/color_content_light"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@id/tv_time"
                            app:layout_constraintStart_toStartOf="@id/tv_time"
                            app:layout_constraintTop_toBottomOf="@id/tv_car_infor"
                            tools:text="送达时间：10月23日22时40分" />

                        <View
                            android:id="@+id/line_state"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/line_height"
                            android:layout_marginTop="20dp"
                            android:background="@color/line_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_receive_time"
                            app:layout_goneMarginTop="20dp" />


                        <com.sang.common.widget.CircularImageView
                            android:id="@+id/point_start"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="#43BFA3"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_start_address"
                            app:layout_constraintStart_toStartOf="@id/tv_time"
                            app:layout_constraintTop_toTopOf="@+id/tv_start_address"
                            app:viewradius="5dp" />

                        <com.sang.common.widget.CircularImageView
                            android:id="@+id/point_end"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="#F06F28"
                            app:borderWidth="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_end_address"
                            app:layout_constraintEnd_toEndOf="@id/point_start"
                            app:layout_constraintStart_toStartOf="@id/point_start"
                            app:layout_constraintTop_toTopOf="@+id/tv_end_address"
                            app:radiusLeftTop="5dp"
                            app:showBorder="false"
                            app:viewradius="5dp"

                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/line_color"
                            app:layout_constraintBottom_toTopOf="@id/point_end"
                            app:layout_constraintEnd_toEndOf="@id/point_start"
                            app:layout_constraintStart_toStartOf="@id/point_start"
                            app:layout_constraintTop_toBottomOf="@id/point_start" />

                        <TextView
                            android:id="@+id/tv_start_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/app_gap"
                            android:layout_marginTop="@dimen/app_gap"
                            android:textColor="@color/color_title_dark"
                            android:textSize="@dimen/text_small_14"
                            app:layout_constraintEnd_toEndOf="@id/tv_time"
                            app:layout_constraintStart_toEndOf="@+id/point_start"
                            app:layout_constraintTop_toBottomOf="@id/line_state"
                            tools:text="新疆维吾尔自治区喀什地区巴楚和平路651号" />

                        <TextView
                            android:id="@+id/tv_start_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_content_light"
                            android:textSize="@dimen/text_min_12sp"
                            app:layout_constraintEnd_toEndOf="@id/tv_start_address"
                            app:layout_constraintStart_toStartOf="@id/tv_start_address"
                            app:layout_constraintTop_toBottomOf="@id/tv_start_address"
                            tools:text="俞芸素（13708199278）" />

                        <LinearLayout
                            android:id="@+id/ll_start_call"
                            android:layout_width="0dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_2_stoke_dddddd"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@id/tv_start_address"
                            app:layout_constraintTop_toBottomOf="@id/tv_start_info">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/icon_call_30" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/app_item_gap"
                                android:text="联系发货人"
                                android:textColor="@color/color_title_dark"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_end_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/color_title_dark"
                            android:textSize="@dimen/text_small_14"
                            app:layout_constraintEnd_toEndOf="@id/tv_start_address"
                            app:layout_constraintStart_toStartOf="@id/tv_start_address"
                            app:layout_constraintTop_toBottomOf="@id/ll_start_call"
                            app:layout_goneMarginTop="@dimen/app_model_gap"
                            tools:text="新疆维吾尔自治区喀什地区巴楚和平路651号" />


                        <TextView
                            android:id="@+id/tv_end_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_content_light"
                            android:textSize="@dimen/text_min_12sp"
                            app:layout_constraintEnd_toEndOf="@id/tv_end_address"
                            app:layout_constraintStart_toStartOf="@id/tv_end_address"
                            app:layout_constraintTop_toBottomOf="@id/tv_end_address"
                            tools:text="奚泽（15542955830）" />

                        <LinearLayout
                            android:id="@+id/ll_end_call"
                            android:layout_width="0dp"
                            android:layout_height="27dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_2_stoke_dddddd"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@id/tv_end_address"

                            app:layout_constraintTop_toBottomOf="@id/tv_end_info">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/icon_call_30" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/app_item_gap"
                                android:text="联系收货人"
                                android:textColor="@color/color_title_dark"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_receive"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_order_info">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="送达凭证"
                            android:textColor="@color/color_title_dark"
                            android:textSize="17sp" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_receive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:id="@+id/tv_receive_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="货物已经送达，收货人已经签字"
                            android:textColor="@color/color_content_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_estimate"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_receive">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="司机评价"
                            android:textColor="@color/color_title_dark"
                            android:textSize="17sp" />



                        <com.hedgehog.ratingbar.RatingBar
                            android:id="@+id/view_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            app:clickable="false"
                            app:halfstart="false"
                            app:starCount="5"
                            app:starEmpty="@drawable/star_border_hide"
                            app:starFill="@drawable/star_border_show"
                            app:starImageHeight="50dp"
                            app:starImagePadding="10dp"
                            app:starImageWidth="50dp" />

                        <TextView
                            android:id="@+id/tv_estimate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="司机的服务态度一般"
                            android:textColor="@color/color_content_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    android:layout_marginBottom="@dimen/app_gap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_estimate">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费总计 860.50元"
                            android:textColor="@color/color_title_dark"
                            android:textSize="@dimen/text_small_14" />



                        <TextView
                            android:id="@+id/tv_price_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="费用明细  起步价40元 * 21.5公里"
                            android:textColor="@color/color_content_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </android.support.constraint.ConstraintLayout>


        </ScrollView>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:gravity="center"
            style="@style/bt_sum_red"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_call"
                android:src="@drawable/rc_voip_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:textSize="@dimen/text_toolbar_title"
                android:text="@string/sumbit"
                android:textColor="@color/white"
                android:id="@+id/tv_button"
                android:layout_marginLeft="@dimen/app_item_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>



    <include
        layout="@layout/toolbar"
         />

</RelativeLayout>