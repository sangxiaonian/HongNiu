<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_dark"
    android:orientation="vertical"
    tools:context=".ui.OrderCreatOrderActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sang.common.widget.CircularFramlayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_item_gap"
                android:layout_marginTop="@dimen/app_gap"
                android:layout_marginRight="@dimen/app_item_gap"
                android:layout_marginBottom="@dimen/app_gap"

                app:viewradius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/app_gap">

                        <com.sang.common.widget.CircularFramlayout
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            app:viewradius="3.5dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/color_line" />
                        </com.sang.common.widget.CircularFramlayout>


                        <com.sang.common.widget.ItemView
                            android:id="@+id/item_start_time"
                            style="@style/itemview"
                            android:paddingLeft="@dimen/app_item_gap"
                            app:editable="false"
                            app:showline="false"
                            app:srcshow="false"
                            app:textcenterhide="请选择发车时间" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:layout_marginLeft="@dimen/app_gap"
                        android:background="@color/color_line_eeeeee" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/app_gap">

                        <com.sang.common.widget.CircularFramlayout
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            app:viewradius="3.5dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#43BFA3" />
                        </com.sang.common.widget.CircularFramlayout>


                        <com.sang.common.widget.ItemView
                            android:id="@+id/item_start_loaction"
                            style="@style/itemview"
                            android:paddingLeft="@dimen/app_item_gap"
                            app:editable="false"
                            app:isSingleLine="false"
                            app:showline="false"
                            app:srcshow="false"
                            app:textcenterhide="请选择发货地" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/line_height"
                        android:layout_marginLeft="@dimen/app_gap"
                        android:background="@color/color_line_eeeeee" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/app_gap">

                        <com.sang.common.widget.CircularFramlayout
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            app:viewradius="3.5dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F06F28" />
                        </com.sang.common.widget.CircularFramlayout>


                        <com.sang.common.widget.ItemView
                            android:id="@+id/item_end_loaction"
                            style="@style/itemview"
                            android:paddingLeft="@dimen/app_item_gap"
                            app:editable="false"
                            app:isSingleLine="false"
                            app:showline="false"
                            app:srcshow="false"
                            app:textcenterhide="请选择收货地" />

                    </LinearLayout>


                </LinearLayout>

            </com.sang.common.widget.CircularFramlayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_item_gap"
                android:background="@color/color_white"
                android:orientation="vertical">

                <com.sang.common.widget.ItemView
                    android:id="@+id/item_start_car_num"
                    style="@style/itemview"
                    app:srcLeftshow="show"
                    app:textcenterhide="请输入发车编号"
                    app:textleft="发车编号" />

                <com.sang.common.widget.ItemView
                    android:id="@+id/item_cargo_name"
                    style="@style/itemview"
                    app:srcLeftshow="show"
                    app:textcenterhide="请输入货物名称"
                    app:textleft="货物名称" />

                <com.sang.common.widget.ItemView
                    android:id="@+id/item_size"
                    style="@style/itemview"
                    app:centerType="number"
                    app:srcLeftshow="show"
                    app:textcenterhide="请输入货物体积"
                    app:textleft="货物体积"
                    app:textright="方" />

                <com.sang.common.widget.ItemView
                    android:id="@+id/item_weight"
                    style="@style/itemview"
                    app:centerType="number"
                    app:srcLeftshow="show"
                    app:textcenterhide="请输入货物重量"
                    app:textleft="货物重量"
                    app:textright="吨" />

                <com.sang.common.widget.ItemView
                    android:id="@+id/item_price"
                    style="@style/itemview"
                    app:centerType="number"
                    app:srcLeftshow="show"
                    app:showline="false"
                    app:textcenterhide="请输入运费"
                    app:textleft="运费"
                    app:textright="元" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bt_entry"
        style="@style/bt_sum_red"
        android:text="发布" />


</LinearLayout>