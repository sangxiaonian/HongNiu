<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_gap"
    android:paddingTop="@dimen/app_model_gap"
    android:paddingRight="@dimen/app_gap"
    android:paddingBottom="@dimen/app_model_gap">


    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_car_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择车辆"
        android:textColor="@color/color_title_dark"
        android:textSize="@dimen/text_small_14" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/tv_car_num"
        app:layout_constraintTop_toTopOf="@id/tv_car_num"
        app:layout_constraintBottom_toBottomOf="@id/tv_car_num"
        android:id="@+id/tv_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_model_gap"
        android:background="@drawable/shape_1_797c8b"
        android:text="请选择车辆"
        android:textColor="@color/white"
        android:textSize="@dimen/text_min_11sp" />


    <TextView
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_car_owner"
        android:textSize="@dimen/text_small"
        android:textColor="@color/color_order_color"
        app:layout_constraintStart_toStartOf="@id/tv_car_num"
        app:layout_constraintEnd_toStartOf="@id/img_go"
        app:layout_constraintTop_toBottomOf="@id/tv_car_num"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_go"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_go_999999" />
</androidx.constraintlayout.widget.ConstraintLayout>