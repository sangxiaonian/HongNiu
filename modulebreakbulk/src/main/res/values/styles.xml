<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_item_breakbulk_record">
        <item name="android:textColor">@color/color_title_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_item_gap</item>
        <item name="android:layout_marginLeft">@dimen/app_model_gap</item>
        <item name="android:layout_marginRight">@dimen/app_model_gap</item>
    </style>

    <style name="tv_breakbulk_company_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">70dp</item>

        <item name="android:textSize">@dimen/text_small_14</item>
        <item name="android:textColor">@color/color_title_dark</item>
    </style>

    <style name="ll_breakbulk_company_detail">
        <item name="android:paddingLeft">@dimen/app_gap</item>
        <item name="android:paddingRight">@dimen/app_gap</item>
        <item name="android:paddingTop">@dimen/app_model_gap</item>
        <item name="android:paddingBottom">@dimen/app_model_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>