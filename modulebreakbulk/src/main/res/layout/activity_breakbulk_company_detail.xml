<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/bg_color"
    tools:context="com.sang.modulebreakbulk.ui.BreakbulkCompanyDetailActivity">


    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:divider="@drawable/line"
        android:showDividers="middle"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_name"
            android:text="公司名称："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_address"
            android:text="地址："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:text="联系人："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_phone"
            android:text="手机号码："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_tel"
            android:text="办公电话："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_line"
            android:text="运输路线："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

        <TextView
            android:id="@+id/tv_price"
            android:text="收费简介："
            android:paddingLeft="@dimen/app_gap"
            android:paddingRight="@dimen/app_gap"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:textSize="@dimen/text_small_14"
            android:textColor="@color/color_title_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="@dimen/text_small_15"
            android:textColor="@color/color_title_dark"
            android:text="拨打电话"
            android:layout_height="45dp"/>
        <View
            android:layout_width="@dimen/line_height"
            android:background="@color/line_color"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_small_15"
            android:textColor="@color/color_title_dark"
            android:text="在线聊天"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="45dp"/>
        <View
            android:layout_width="@dimen/line_height"
            android:background="@color/line_color"
            android:layout_height="match_parent"/>
        <TextView
            style="@style/bt_sum_red"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_small_15"
            android:text="立即发货"
            android:id="@+id/tv_send"
            android:gravity="center"
            android:layout_height="45dp"/>
    </LinearLayout>

</LinearLayout>
