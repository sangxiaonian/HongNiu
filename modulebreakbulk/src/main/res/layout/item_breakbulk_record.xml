<?xml version="1.0" encoding="utf-8"?>
<com.sang.common.widget.CircularFramlayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="@dimen/app_model_gap"
    android:layout_marginRight="7dp"
    android:background="@color/white"
    app:viewradius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_company"
            style="@style/tv_item_breakbulk_record"
            android:text="发货单位：" />

        <LinearLayout
            android:layout_marginTop="@dimen/app_item_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_phone"
                style="@style/tv_item_breakbulk_record"
                android:layout_marginTop="0dp"
                android:text="收货人电话：" />

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="@dimen/app_gap"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_call_30" />

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_maessage_30" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            style="@style/tv_item_breakbulk_record"
            android:text="收货人地址：" />

        <TextView
            android:id="@+id/tv_cargo_name"
            style="@style/tv_item_breakbulk_record"
            android:text="货物名称：" />

        <TextView
            android:id="@+id/tv_cargo_weight"
            style="@style/tv_item_breakbulk_record"
            android:text="货物重量：" />

        <TextView
            android:id="@+id/tv_cargo_size"
            style="@style/tv_item_breakbulk_record"
            android:text="货物体积：" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_item_breakbulk_record"
            android:text="预估运费：" />

        <TextView
            android:id="@+id/tv_price_gap"
            style="@style/tv_item_breakbulk_record"
            android:text="运费差额：" />

        <TextView
            android:id="@+id/tv_order"
            style="@style/tv_item_breakbulk_record"
            android:text="运输单号：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/app_item_gap"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:background="@color/line_color" />

        <TextView
            style="@style/bt_sum_red"
            android:id="@+id/bt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/app_model_gap"
            android:layout_marginBottom="@dimen/app_model_gap"
            android:padding="@dimen/app_item_gap"
            android:textSize="@dimen/text_small"
            android:text="支付" />

    </LinearLayout>
</com.sang.common.widget.CircularFramlayout>


