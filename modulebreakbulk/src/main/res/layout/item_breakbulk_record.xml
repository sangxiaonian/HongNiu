<?xml version="1.0" encoding="utf-8"?>
<com.sang.common.widget.CircularFramlayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="@dimen/app_model_gap"
    android:layout_marginRight="7dp"
    android:background="@color/white"
    app:viewradius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_marginTop="@dimen/app_model_gap"
            android:layout_marginRight="@dimen/app_gap"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收货人信息"
                android:textColor="@color/color_title_dark"
                android:textSize="@dimen/text_small_15" />

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_call_30" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_company"
            style="@style/tv_item_breakbulk_record"
            android:text="收货单位：" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/tv_item_breakbulk_record"
            android:text="收货人地址：" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_marginTop="@dimen/app_model_gap"
            android:layout_marginRight="@dimen/app_gap"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:text="货物信息"
            android:textColor="@color/color_title_dark"
            android:textSize="@dimen/text_small_15" />

        <TextView
            android:id="@+id/tv_cargo_name"
            style="@style/tv_item_breakbulk_record"
            android:text="货物名称：" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_item_breakbulk_record"
            android:text="预估运费：" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_marginTop="@dimen/app_model_gap"
            android:layout_marginRight="@dimen/app_gap"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="物流信息"
                android:textColor="@color/color_title_dark"
                android:textSize="@dimen/text_small_15" />

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/app_gap"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_call_30" />

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_maessage_30" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_logistics_company"
            style="@style/tv_item_breakbulk_record"
            android:text="物流公司：" />

        <TextView
            android:id="@+id/tv_order"
            style="@style/tv_item_breakbulk_record"
            android:text="运输单号：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/app_item_gap"
            android:layout_marginBottom="@dimen/app_item_gap"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_gap"
            android:layout_marginRight="@dimen/app_gap"
            android:layout_marginBottom="@dimen/app_model_gap"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textColor="@color/color_title_dark"
                android:textSize="@dimen/text_small" />

            <View
                android:layout_width="@dimen/userhead90dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/bt_pay"
                style="@style/bt_sum_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="@dimen/app_item_gap"
                android:text="支付"
                android:textSize="@dimen/text_small" />


        </LinearLayout>

    </LinearLayout>
</com.sang.common.widget.CircularFramlayout>


