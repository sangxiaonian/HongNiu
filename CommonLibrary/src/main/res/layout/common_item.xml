<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:minWidth="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_title_dark"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_item_gap"
            android:layout_marginRight="@dimen/app_item_gap"
            android:layout_weight="1"
            android:background="@color/color_tran"
            android:textColor="@color/color_title_dark"
            android:textColorHint="@color/color_et_hide"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_title_dark"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_go"
            android:layout_width="@dimen/img_go_size"
            android:layout_height="@dimen/img_go_size"
            android:src="@mipmap/icon_gary_arrowmore_20" />

    </LinearLayout>

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>